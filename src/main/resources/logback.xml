<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<appender name="DEFAULT_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/home/logs/springStudy/default.log-%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%m]%n</pattern>
		</encoder>
	</appender>

	<appender name="STAT_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/home/logs/statistics/springStudy.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/home/logs/statistics/springStudy.log.%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<append>true</append>
		<encoder>
			<pattern>%d %t %-5level %c{0}.%M:%L -%m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>

	<appender name="INTERACTIVE_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/home/logs/springStudy/interactive.log-%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%m]%n</pattern>
		</encoder>
	</appender>

	<appender name="THIRDPARTY_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/home/logs/springStudy/thirdparty.log-%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%m]%n</pattern>
		</encoder>
	</appender>

	<appender name="TASK_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
