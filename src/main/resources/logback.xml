		<append>true</append>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%m]%n</pattern>
		</encoder>
	</appender>

	<appender name="CACHE_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
