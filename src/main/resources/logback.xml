	<logger name="SEC_LOGGER">
		<level value="INFO" />
		<appender-ref ref="SEC_LOG" />
	</logger>

	<logger name="PAYMENT_LOGGER">
		<level value="INFO" />
		<appender-ref ref="PAYMENT_LOG" />
	</logger>

	<logger name="CONFIG_LOGGER">
		<level value="INFO" />
		<appender-ref ref="CONFIG_LOG" />
