		<appender-ref ref="REDIS_LOG" />
	</logger>

	<logger name="com.netease.mail">
		<level value="INFO" />
		<appender-ref ref="DEFAULT_LOG" />
	</logger>
	
	<logger name="DAO_LOGGER">
        <level value="INFO" />
        <appender-ref ref="DAO_LOG" />
    </logger>

	<root level="INFO">
		<!--<appender-ref ref="STDOUT" />-->
	</root>
</configuration>